    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.4/jquery.min.js"></script>
    <script>
        $(window).scroll(function () {
            if ($(this).scrollTop() > 100) {
                $('#dynamicNav').addClass('shadow p-3 mb-5 bg-body-tertiary');
            } else {
                $('#dynamicNav').removeClass('shadow p-3 mb-5 bg-body-tertiary');
            }
        });


        const closeIcon = document.getElementById('closeIcon');
        const banner = document.querySelector('.main-discount-banner');

        closeIcon.addEventListener('click', () => {
            banner.style.animation = 'fadeOut 1s'; // Add the fadeOut animation class
            setTimeout(() => {
                banner.style.display = 'none'; // Hide the banner after the animation completes
            }, 1000); // Wait for the animation duration (1s) before hiding the banner
        });



    </script>
